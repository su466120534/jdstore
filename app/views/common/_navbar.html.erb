    <h1 class="brand"><a href="./">Otentik<span class="text-primary"> Tent Store</span></a></h1>





             <ul class="inline-list">
               <li class="text-white">
                  <%= link_to("Home", root_path) %>
               </li>
               <li class="text-white">
                  <%= link_to("Shop", products_path) %>
               </li>
               <li class="text-white">
                  <%= link_to("Contact", products_path) %>
               </li>
               <li class="text-white">
                  <%= link_to("  ", products_path) %>
               </li>
