                                <li class="dropdown">
                                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                      Hi!, <%= current_user.email %>
                                      <b class="caret"></b>
                                  </a>
                                  <ul class="dropdown-menu">
                                    <% if current_user.admin? %>
                                     <li>
                                        <%= link_to("Admin", admin_products_path )%>
                                     </li>
                                     <% end %>

                                     <li>
                                       <%= link_to("My Orders", account_orders_path ) %>
